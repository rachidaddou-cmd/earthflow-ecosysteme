{
  "preset": "eu_ai_act",
  "version": "1.0.0",
  "description": "EU AI Act compliance rules — Articles 5, 9, 13, 22",
  "rules": [
    {
      "id": "eu_ai_art5_manipulation",
      "name": "Art.5 — Prohibit subliminal manipulation",
      "condition": {"operator": "contains", "value": "manipulate", "target": "prompt"},
      "action": "BLOCK",
      "priority": 95,
      "active": true
    },
    {
      "id": "eu_ai_art5_social_scoring",
      "name": "Art.5 — Prohibit social scoring systems",
      "condition": {"operator": "contains", "value": "social score", "target": "prompt"},
      "action": "BLOCK",
      "priority": 95,
      "active": true
    },
    {
      "id": "eu_ai_art9_pii_block",
      "name": "Art.9 — Block unprotected PII processing",
      "condition": {"operator": "regex", "value": "\\b\\d{3}-\\d{2}-\\d{4}\\b", "target": "prompt"},
      "action": "REDACT",
      "priority": 80,
      "active": true
    },
    {
      "id": "eu_ai_art13_transparency",
      "name": "Art.13 — Flag insufficient transparency disclosures",
      "condition": {"operator": "length_lt", "value": 10, "target": "prompt"},
      "action": "WARN",
      "priority": 30,
      "active": true
    }
  ]
}
